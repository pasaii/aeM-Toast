<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/success_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="66dp"
        android:paddingRight="66dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imgVType"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:contentDescription="Flag Image"
            android:src="@drawable/ic_success"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtVMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Success"
            android:textColor="@color/colorWhite"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgVToast"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/llMessage"
        android:layout_alignRight="@+id/llMessage"
        android:background="@drawable/image_background"
        android:contentDescription="Toast Icon"
        android:padding="10dp"
        android:src="@drawable/ic_launcher_round"
        tools:ignore="HardcodedText" />
</RelativeLayout>